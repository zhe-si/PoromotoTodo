<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="偏好设置">
        
        <SwitchPreferenceCompat
            app:key="query_rest"
            app:title="进入计划时询问" />
        
        <SwitchPreferenceCompat
            app:key="focus_model"
            app:title="专注模式"/>
        
        <ListPreference
            app:dialogTitle="选择一个"
            app:entries="@array/entries_list_preference"
            app:entryValues="@array/setting_sounds"
            app:key="list_preference"
            app:summary="选择提醒时的音乐"
            app:title="提示音" />
    
    </PreferenceCategory>

    <PreferenceCategory app:title="数据">
        <Preference app:title="清除统计数据" />
        <Preference app:title="清除音乐缓存" />
    </PreferenceCategory>

</PreferenceScreen>
